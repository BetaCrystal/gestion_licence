{% extends 'base.html.twig' %}

{% block title %}Modification d'un bloc d'enseignement
{% endblock %}

{% block body %}
	<div class="flex items-center w-full h-full">
		{% include "Components/sidebar.html.twig" %}
		<div class="h-full mt-32 mx-24">
			{% for message in app.flashes('success') %}
				<div class="alert alert-danger">{{ message }}</div>
			{% endfor %}
			{% for message in app.flashes('error') %}
				<div class="alert alert-danger">{{ message }}</div>
			{% endfor %}
			{% for message in app.flashes('info') %}
				<div class="alert alert-info">{{ message }}</div>
			{% endfor %}

			<h1 class="text-blue-950 text-3xl font-medium">Modifiez un bloc d'enseignement</h1>
			{{ form_start(form) }}

			{{ form_widget(form) }}

			<div class="flex flex-row">
				<a href="{{ path('teaching_block_liste') }}" class="px-4 py-2.5 text-black bg-slate-200 font-medium text-base rounded-xl mr-3">
					Retour Ã  la liste
				</a>

				<button type="submit" class="px-4 py-2.5 text-white bg-blue-950 font-medium text-base rounded-xl h-fit">
					Enregistrer les informations
				</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
