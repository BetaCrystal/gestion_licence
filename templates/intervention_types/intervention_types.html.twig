{% extends 'base.html.twig' %}

{% block title %}Types d'interventions
{% endblock %}

{% block body %}
	<div class="flex items-center w-full h-full">
		{% include "Components/sidebar.html.twig" %}

		{% for message in app.flashes('error') %}
			<div class="alert alert-danger">{{ message }}</div>
		{% endfor %}
		<div class="h-full mt-32 mx-24">
			<div class="flex flex-row w-full justify-between mb-10">
				<h2 class="text-blue-950 text-3xl font-medium">Types d'interventions</h2>
				<a href="{{ path('app_add_intervention_type') }}" class="px-4 py-2.5 text-white bg-blue-950 font-medium text-base rounded-xl">Ajouter</a>
			</div>


			<h2 class="text-yellow-500 text-xl">Filtres</h2>
			<div class="bg-yellow-500 w-full h-0.5 rounded-xs my-6"></div>

			<div class="table-wrapper">
				<table class="interventions-table">
					<thead>
						<tr>
							<th class="border border-slate-300 px-6 py-4 bg-slate-300">Nom</th>
							<th class="border border-slate-300 px-6 py-4 bg-slate-300">Description</th>
							<th class="border border-slate-300 px-6 py-4 bg-slate-300">Couleur</th>
						</tr>
					</thead>
					<tbody>
						{% for interventionType in interventionTypes %}
							<tr>
								<td class="border border-slate-300 px-6 py-4 ">{{ interventionType.name }}</td>
								<td class="border border-slate-300 px-6 py-4 ">{{ interventionType.description }}</td>
								<td class="border border-slate-300 px-6 py-4 " style="color: {{ interventionType.color }};">{{ interventionType.color }}</td>
								<td class="border border-slate-300 px-6 py-4 ">
									<a href="{{ path('app_view_intervention_type', {'id': interventionType.id}) }}">Voir la fiche</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
