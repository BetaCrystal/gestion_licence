{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="flex items-center w-full h-full">
		{% include "Components/login_sidebar.html.twig" %}
		<form method="post" class="h-full mt-32 ml-24">
			{% if error %}
				<div class="alert alert-danger text-red-700">Mot de passe ou email invalide</div>
			{% endif %}

			<h1 class="text-2xl font-bold text-blue-950 mb-12">Gestion du supérieur</h1>
			<h2 class="text-xl font-bold text-blue-900 mb-4">Connexion au portail</h2>

			<div class="flex flex-col mb-8">
				<label class="mb-2">Email - champ obligatoire</label>
				<input type="email" name="email" class="border border-slate-300 rounded-md px-3 py-1 mb-6" value="{{ last_username }}" required>

				<label>Mot de passe - champ obligatoire</label>
				<input type="password" name="password" class="border border-slate-300 rounded-md px-3 py-1" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			</div>

			<button class="px-4 py-2.5 text-white bg-blue-950 font-medium text-base rounded-xl" type="submit">Accéder au portail</button>
		</form>
	</div>
{% endblock %}
