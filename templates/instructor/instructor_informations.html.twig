{% extends 'base.html.twig' %}

{% block title %}Fiche Enseignant{% endblock %}

{% block body %}

    <div class="enseignant-card">

        <h2>
            {{ results[0].prenom }} {{ results[0].nom }}
        </h2>

        <h3 class="section-title">Modules enseignés</h3>

        <ul class="modules-list">
            {% for row in results %}
                <li class="module-item">
                    <strong>{{ row.module }}</strong> :
                    {{ row.nbHeures }}h
                    (dont {{ row.nbHeuresRestantes }} restantes pour cette année)
                </li>
            {% endfor %}
        </ul>

        <a href="" class="btn-export">
            Exporter le récapitulatif (fichier .xls)
        </a>

    </div>
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('info') %}
        <div class="alert alert-info">{{ message }}</div>
    {% endfor %}

        {{ form_start(form) }}
        
        {{ form_end(form) }}
{% endblock %}
