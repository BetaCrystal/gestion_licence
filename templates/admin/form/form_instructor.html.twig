{% extends 'base.html.twig' %}

{% block title %}Form Instructor Filter
{% endblock %}

{% block body %}

	{% for message in app.flashes('error') %}
		<div class="alert alert-danger">{{ message }}</div>
	{% endfor %}
	{% for message in app.flashes('info') %}
		<div class="alert alert-info">{{ message }}</div>
	{% endfor %}

	{{ form_start (form)}}

	{{ form_row(form.last_name) }}
	{{ form_row(form.first_name) }}
	{{ form_row(form.email) }}
	<button type="submit" class="px-4 py-2.5 text-blue-950 bg-yellow-500 font-medium text-base rounded-xl">Filtrer</button>
	{{ form_end(form) }}


{% endblock %}
