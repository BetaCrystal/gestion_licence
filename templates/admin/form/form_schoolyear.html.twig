{% extends 'base.html.twig' %}

{% block title %}Form School Year
{% endblock %}

{% block body %}

	{% for message in app.flashes('error') %}
		<div class="alert alert-danger">{{ message }}</div>
	{% endfor %}
	{% for message in app.flashes('info') %}
		<div class="alert alert-info">{{ message }}</div>
	{% endfor %}

	{{ form_start(schoolYearForm, { attr: { id: 'school_year_form'} } ) }}

	{{ form_row(schoolYearForm.name) }}
	{{ form_row(schoolYearForm.startDate) }}
	{{ form_row(schoolYearForm.endDate) }}

	<button class="px-4 py-2.5 text-white bg-blue-950 font-medium text-base rounded-xl" type="submit" class="btn">Enregistrer les informations</button>
	{{ form_end(schoolYearForm) }}

{% endblock %}
