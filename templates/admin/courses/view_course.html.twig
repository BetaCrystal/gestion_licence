{% extends 'base.html.twig' %}

{% block title %}Modification Interventions
{% endblock %}


{% block body %}
	<div class="flex items-center w-full h-full">
		{% for message in app.flashes('success') %}
			<div class="alert alert-danger">{{ message }}</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="alert alert-danger">{{ message }}</div>
		{% endfor %}

		<div class="h-full mt-32 mx-24">
			{% include "Components/sidebar.html.twig" %}
			<div class="h-full mt-32 mx-24">
				<h1 class="text-blue-950 text-3xl font-medium mb-6">Modifier une intervention</h1>
				<h2 class="text-sm text-slate-300">Remplissez les informations ci-dessous.</h2>

				{{ include("admin/form/form_course.html.twig") }}

			</div>
		</div>
	</div>
{% endblock %}
